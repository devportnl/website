local_backend: true
backend:
  name: git-gateway
#  repo: thedevcom/website
#  branch: netlify # Branch to update (optional; defaults to master)
#  use_graphql: true
media_folder: 'static/images'
public_folder: 'images'

i18n:
  # Required and can be one of multiple_folders, multiple_files or single_file
  # multiple_folders - persists files in `<folder>/<locale>/<slug>.<extension>`
  # multiple_files - persists files in `<folder>/<slug>.<locale>.<extension>`
  # single_file - persists a single file in `<folder>/<slug>.<extension>`
  structure: multiple_files

  # Required - a list of locales to show in the editor UI
  locales: [nl, en]

  # Optional, defaults to the first item in locales.
  # The locale to be used for fields validation and as a baseline for the entry.
  default_locale: nl

_fields:
  - &enable { label: 'Enable', name: 'enable', widget: 'boolean', i18n: duplicate }
  - &title { label: 'Title', name: 'title', widget: 'string', i18n: true }
  - &label { label: 'Label', name: 'label', widget: 'string', i18n: true }
  - &icon { label: 'Icon', name: 'icon', widget: 'string', i18n: duplicate }
  - &link { label: 'Link', name: 'link', widget: 'string', i18n: duplicate, default: '#'}
  - &webp_image { label: 'Webp image', name: 'image_webp', widget: 'image' , media_folder: '/{{media_folder}}/blog', public_folder: '/{{public_folder}}/blog', i18n: duplicate }
  - &image{ label: 'Image', name: 'image', widget: 'image' , media_folder: '/{{media_folder}}/blog', public_folder: '/{{public_folder}}/blog', i18n: duplicate }
  - &content { label: 'Content', name: 'content', widget: 'text', i18n: true }

_data_collection:
  - &about
    name: 'about'
    label: 'About'
    format: yaml
    identifier_field: name
    i18n: true
    editor:
      preview: true
    fields:
      - *enable
      - *title
      - label: 'About item'
        name: 'about_item'
        widget: 'list'
        i18n: true
        fields:
          - *icon
          - *title
          - *content
  - &banner
    name: 'banner'
    label: 'Banner'
    folder: 'data'
    format: yaml
    identifier_field: name
    i18n:
      structure: multiple_folders
    editor:
      preview: true
    fields:
      - label: 'Banner'
        name: 'banner'
        widget: 'object'
        i18n: true
        fields:
          - *enable
          - *webp_image
          - *image
          - *icon
          - *title
          - *content
          - label: 'Button'
            name: 'button'
            widget: 'object'
            i18n: true
            fields:
              - *enable
              - *label
              - *link
